{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"useUnknownInCatchVariables": false,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"baseUrl": ".",
		"paths": {
			"@components/*": ["./components/*"],
			"@context/*": ["./context/*"],
			"@pages/*": ["./pages/*"],
			"@styles/*": ["./styles/*"],
			"@types/*": ["./types/*"],
			"@utils/*": ["./utils/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"./index.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"pages/account/activate/[...slug].jsx"
	],
	"exclude": ["node_modules"]
}
