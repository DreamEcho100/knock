{
	"compilerOptions": {
		"target": "es2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"useUnknownInCatchVariables": false,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [{ "name": "next" }],
		"baseUrl": ".",
		"paths": { "~/*": ["./*"] }
	},
	"include": [
		"next-env.d.ts",
		"./index.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"pages/account/activate/[...slug].jsx",
		".eslintrc.cjs",
		"tailwind.config.js",
		"next.config.js"
	],
	"exclude": ["node_modules"]
}
